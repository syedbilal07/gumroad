<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>By</th>
    </tr>
  </thead>
  <tbody>
    <% @product_matches.each do |product| %>
      <tr>
        <td data-label="Product">
          <%= product.price_formatted %>, <%= link_to_unless_current(h(product.name), admin_product_path(product), title: product.id) %>
          <%= link_to(icon_tag("arrow-up-right-square"), product.long_url, target: "_blank") %>
        </td>

        <td data-label="By">
          <%= link_to h(product.user.name.presence || "User #{product.user.id}"), admin_user_path(product.user) %>
          <small>
            <%= format_datetime_with_relative_tooltip(product.created_at) %>
          </small>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
